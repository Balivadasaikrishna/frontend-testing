{
  "name": "frontend-testing-demo",
  "version": "1.0.0",
  "description": "My React testing project - learning Jest and Playwright",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:e2e": "playwright test",
    "test:unit": "jest tests/unit",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:metrics": "jest --coverage --coverageReporters=json,lcov,text,html",
    "test:smoke": "playwright test --grep='smoke'",
    "test:regression": "playwright test --grep='regression'",
    "lint": "eslint src/**/*.{ts,tsx} tests/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} tests/**/*.{ts,tsx} --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc && npm run copy-html",
    "build:prod": "tsc && npm run copy-html && npm run test:ci",
    "copy-html": "node -e \"require('fs').copyFileSync('public/index.html', 'dist/index.html')\"",
    "dev": "echo 'Add your dev server here'",
    "ci:full": "npm run lint && npm run type-check && npm run test:ci && npm run test:e2e",
    "deploy:staging": "echo 'Deploy to staging environment'",
    "deploy:prod": "echo 'Deploy to production environment'"
  },
  "keywords": ["react", "testing", "jest", "playwright", "typescript", "ci-cd"],
  "author": "Sai Krishna",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/testing-library__react": "^10.0.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "playwright": "^1.54.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
